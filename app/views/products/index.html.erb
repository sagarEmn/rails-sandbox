<div class="flex flex-col gap-10">
<h1 class="text-8xl font-extrabold text-red-700">Our Products. Haha!</h1>

<% if @products.any? %>
<ul class="text-3xl flex flex-col items-center p-8 border-2 rounded-2xl bg-red-500">
    <% @products.each do |product| %>
        <li><%= product.name%></li>
    <% end %>
</ul>
<% else %>
<p>No products found yet. Add some! </p>
<% end %>

<%= link_to "New Product", new_product_path, class: "mt-5 px-4 py-2 bg-pink-50 text-white hover:bg-pink-300" %>
</div>